{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": ["plugin:react/recommended", "airbnb"],
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": ["react"],
  "rules": {
    "no-plusplus": "off"
  },
  "overrides": [
    {
      "files": ["hardhat.config.js"],
      "globals": { "task": true }
    }
  ]
}
